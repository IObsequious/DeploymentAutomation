{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "DscResource Build Configuration Schema",

  "type": "object",

  "properties": {
    "$ref": "#/definitions/dscResourceInfo/properties"
  },
  "definitions": {
    "dscConfiguration": {
      "additionalProperties": false,
      "properties": {
        "rootNamespace": {
          "type": "string"
        }
      }
    },
    "codeGenerationOptions": {
      "additionalProperties": false,
      "properties": {
        "rootNamespace": {
          "type": "string"
        },
        "outputDirectory": {
          "title": "string"
        },
        "moduleVersion": {
          { "$ref": "#/definitions/version" }
        },
        "moduleGuid": {
          "type": "string"
        }
      }
    },
    "dscResourceInfo": {
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "friendlyName": { "type": "string" },
        "classVersion": { "$ref": "#/definitions/classVersion" },
        "targetNamespace": { "type": "string" },
        "properties": {
          "type": "array",
          "items": [
            { "$ref": "#/definitions/property" }
          ]
        }

      },
      "required": [
        "name",
        "classVersion",
        "properties"
      ]
    },
    "version": {
      "additionalProperties": false,
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0
        },
        "minor": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "revision": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "build": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      },
      "required": [
        "major"
      ]
    },
    "classVersion": {
      "additionalProperties": false,
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0
        },
        "minor": {
          "type": "integer",
          "minimum": 0
        },
        "revision": {
          "type": "integer",
          "minimum": 0
        },
        "build": {
          "type": "string"
        }
      },
      "required": [
        "major",
        "minor",
        "revision"
      ]
    },
    "property": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "The cannonical name of the property.",
          "type": "string"
        },
        "isEmbedded": {
          "description": "Specifies whether or not this resource property has entire DSC resources int its values.",
          "type": "boolean"
        },
        "description": {
          "description": "A short description describing the resource property.",
          "type": "string"
        },
        "attribute": {
          "description": "The attribute to apply to this resource property. There can be only one key property.",
          "type": "string",
          "enum": [
            "Key",
            "Required",
            "Read",
            "Write"
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "Boolean",
            "Boolean[]",
            "Char",
            "Char[]",
            "DateTime",
            "DateTime[]",
            "HashTable",
            "CimInstance[]",
            "HashTable[]",
            "PSCredential",
            "PSCredential[]",
            "Single",
            "Single[]",
            "Double",
            "Double[]",
            "Int16",
            "Int16[]",
            "Int32",
            "Int32[]",
            "Int64",
            "Int64[]",
            "SByte",
            "SByte[]",
            "String",
            "String[]",
            "UInt16",
            "UInt16[]",
            "UInt32",
            "UInt32[]",
            "UInt64",
            "UInt64[]",
            "Byte",
            "Byte[]"
          ]
        }

      },
      "required": [
        "name",
        "isEmbedded",
        "attribute",
        "type"
      ]
    }
  }
  
}
